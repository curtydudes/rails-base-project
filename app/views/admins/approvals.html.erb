<%= render 'admins/nav-admin' %>
<section class="container admin">
  <% if @users.empty? %>
  <h1>No Pending Approvals</h1>
  <% else %>
  <h1>Pending Approvals</h1>
  <table class="table">
    <thead class="thead-dark">
      <tr>
        <th scope="col">ID</th>
        <th scope="col" class="responsive">Username</th>
        <th scope="col">Email</th>
        <th scope="col">Action</th>
      </tr>
    </thead>

    <tbody>
    <% @users.each do |user| %>
      <tr>
        <th scope="row"><%= user.id %></th>
        <td class="responsive"><%= user.username %></td>
        <td><%= user.email %></td>
        <td><%= link_to "Admit",  admins_approvals_path(id: user.id, admitted: true), method: :put %></td>
      </tr>
    <% end %>
    </tbody>
  </table>
  <% end %>
</div>
